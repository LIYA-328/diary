<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_gradient">

    <!-- 总余额显示 -->
    <TextView
        android:id="@+id/tvTotalBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="总余额: ¥0.00"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/balance_background"
        android:textColor="@color/green"
        android:layout_marginBottom="16dp"/>

    <!-- 添加记录按钮 -->
    <Button
        android:id="@+id/btnAddRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ 添加记录"
        android:backgroundTint="#FF9EB4"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- 记录列表 -->
    <ListView
        android:id="@+id/listViewRecords"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#FFC8D5"
        android:dividerHeight="1dp"/>

    <!-- 空列表提示 -->
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="还没有记账记录，点击添加记录开始记账"
        android:textColor="#FF9EB4"
        android:textSize="18sp"
        android:visibility="gone"/>

</LinearLayout>