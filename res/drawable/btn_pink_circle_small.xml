<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#FFC8D5" />
            <size
                android:width="48dp"
                android:height="48dp" />
            <stroke
                android:width="1dp"
                android:color="#FF9EB4" />
        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF9EB4" />
            <size
                android:width="48dp"
                android:height="48dp" />
            <stroke
                android:width="1dp"
                android:color="#FFC8D5" />
        </shape>
    </item>
</selector>